div.row.gutter-large
	div.wrap
		///div.col-md-12
			form(novalidate name='resumeform' ng-submit='resumeform.$valid && update(Resume)' id="resumeForm")
				div.form-group
					div.form-control
						label.label Personal description
						div.form-element
							textarea.input(name='description' ng-model='Resume.description' required)
					a.btn.btn-primary(ng-click="push('Work experience')") Add work exp.
					div.form-group.row.gutter-small(ng-repeat="resumePost in Resume.posts track by $index | orderBy:'-startdate'")
						a.btn.btn-primary(ng-click="removePost($index)") Delete {{ $index }}
						div.col-6
							div.form-control
								label.label Title
								div.form-element
									input.input(type='text' name='title' ng-model='resumePost.title' required)
						div.col-6
							div.form-control.col-6
								label.label Type
								div.form-element
									input.input(type='text' name='type' ng-model='resumePost.type' required)
						div.col-12
							div.form-control
								label.label What did you do?
								div.form-element
									textarea.input(name='description' ng-model='resumePost.description' required)
						div.col-6
							div.form-control
								label.label When did you start?
								div.form-element
									input.input(type='text' name='title' ng-model='resumePost.startdate' required)
						div.col-6
							div.form-control.col-6
								label.label When did you end?
								div.form-element
									input.input(type='text' name='type' ng-model='resumePost.enddate' required)

					div.form-control
						input.btn.btn-primary.left(type='submit' value='Save')
						a.btn.btn-secondary.right(href="#") Cancel
		div.col-12
			h1 Resume preview
			h2 Description
			p(ng-click="setEditDescription(true)" ng-if="!editDescription") {{ Resume.description }}
			div(ng-if="editDescription")
				p edit!
				a.btn.btn-secondary(ng-click="setEditDescription(false)") Close
			div(ng-repeat="resumePost in Resume.posts" ng-click="setActive(resumePost)")
				div.row.gutter-base(ng-if="activePost == resumePost")
					div.col-6
							div.form-control
								label.label Title
								div.form-element
									input.input(type='text' name='title' ng-model='resumePost.title' required)
						div.col-6
							div.form-control.col-6
								label.label Type
								div.form-element
									input.input(type='text' name='type' ng-model='resumePost.type' required)
						div.col-12
							div.form-control
								label.label What did you do?
								div.form-element
									textarea.input(name='description' ng-model='resumePost.description' required)
						div.col-6
							div.form-control
								label.label When did you start?
								div.form-element
									input.input(type='text' name='title' ng-model='resumePost.startdate' required)
						div.col-6
							div.form-control.col-6
								label.label When did you end?
								div.form-element
									input.input(type='text' name='type' ng-model='resumePost.enddate' required)
						div.form-control
							a.btn.btn-primary.left(ng-click="unsetActive()") Save
							a.btn.btn-secondary.right(href="#") Cancel
				div.resume-post(ng-if="activePost != resumePost")
					h3 {{ resumePost.title }} {{ resumePost.startdate }} - {{ resumePost.enddate }}
					p {{ resumePost.description }}