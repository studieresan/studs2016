include ../layout/header.jade
include ../layout/menu.jade

section.padding#profile-header
	.wrap
		.row.gutter-base.flex.flex-center
			.col-sm-2
			.col-4.image
				img(src="https://placeimg.com/250/250/any")
			.col-4
				h1 #{user.contact}
				span.email #{user.email}
				a.btn.btn-primary.btn-small(href="#") Call to action
			.col-sm-2

section.padding.white-bg
	.wrap
		.row.gutter-base
			.col-12				
				h1.t-center Event statistics
			.col-12.row.t-center.gutter-base(ng-controller="chartsController")
				.col-12
					h2 Before the event
				.col-sm-4
					h3 Do you know the company?
					canvas( class="chart chart-doughnut" chart-data="data[0].before[0]" chart-labels="labels")
				.col-sm-4
					h3 Do you think you could write your thesis there?
					canvas(class="chart chart-doughnut" chart-data="data[0].before[1]" chart-labels="labels")
				.col-sm-4
					h3 Do you have a positive impression of the company?
					canvas(class="chart chart-doughnut" chart-data="data[0].before[2]" chart-labels="labels")

section.padding
	.wrap
		.row.t-center.gutter-base(ng-controller="chartsController")
				.col-12
					h2 After the event
				.col-sm-4
					h3 Have your impression changed?
					canvas( class="chart chart-doughnut" chart-data="data[1].after[0]" chart-labels="labels")
				.col-sm-4
					h3 Do you think you could write your thesis there?
					canvas(class="chart chart-doughnut" chart-data="data[1].after[1]" chart-labels="labels")
				.col-sm-4
					h3 Do you like charts?
					canvas(class="chart chart-doughnut" chart-data="data[1].after[2]" chart-labels="labels")

section.padding.black-bg(ng-controller="tagCloudController")
	.wrap
		.row.gutter-base
			.col-12
				h1.t-center This is what we thought about you!
				<jqcloud id="cloud-dynamic" words="words" steps="7" auto-resize="true" colors="colors"></jqcloud>

section.padding.green-bg
	.wrap
		.row.gutter-base
			.col-12
				h1.t-center Studs members who have shown explicily interest in you
			.col-12.row.gutter-base
				.col-sm-4.t-center.image
					img(src="https://placeimg.com/250/250/any")
					h3 Person 1
				.col-sm-4.t-center.image
					img(src="https://placeimg.com/250/250/any")
					h3 Person 2
				.col-sm-4.t-center.image
					img(src="https://placeimg.com/250/250/any")
					h3 Person 3

include ../layout/footer.jade
include ../layout/includes.jade