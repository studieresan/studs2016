section.padding.white-bg(ng-init="user = #{userData}")
	.wrap.t-center
		h1 Superpowers
	.wrap
		div.row.gutter-large(ng-controller="companyCtrl")
			div.col-md-6
				form(novalidate name='addcompany' ng-submit='addcompany.$valid && addOrEdit(_company)')
					div.form-group.row.gutter-base
						h2.form-title {{ editType }} company
						div.form-control.col-sm-6
							label.label E-mail
							div.form-element
								input.input(type='email' name='email' ng-model='_company.email' required)
						div.col-sm-6
							div.form-control
								label.label Password
								div.form-element
									input.input(type='text' name='password' ng-model='_company.password' ng-value="suggestedPassword" ng-disabled="selectedCompany")
						div.col-sm-12
							div.form-control
								label.label Company name
								div.form-element
									input.input(type='text' name='name' ng-model='_company.name')
						div.col-sm-12
							div.form-control
								label.label Contact person
								div.form-element
									input.input(type='text' name='contact' ng-model='_company.contact')
						div.col-sm-12
							h3 Event data
							p Use the public links from Google Spreadsheet.
						div.col-sm-6
							div.form-control
								label.label Spreadsheet public link (before)
								div.form-element
									input.input(type='text' name='eventDataBeforeURL' ng-model='_company.eventDataBeforeURL')
						div.col-sm-6
							div.form-control
								label.label Spreadsheet public link (after)
								div.form-element
									input.input(type='text' name='eventDataAfterURL' ng-model='_company.eventDataAfterURL')
					div.form-group.row.gutter-base
						div.form-control
							input.btn.btn-primary(type='submit' value='{{ editType }}')
			div.col-md-6
				form(novalidate name='removecompany' ng-submit='removecompany.$valid && remove(selectedCompany)')
					div.form-group.row.gutter-base
						h2.form-title Edit company
						div.form-control.col-12
							label.label Company
							div.form-element
								select(name="selectCompany" id="selectCompany" ng-options="company.name for company in allcompanies" ng-model="selectedCompany" ng-change="setEdit(selectedCompany)")
					div.form-group.row.gutter-base
						div.form-control
							input.btn.btn-primary(type='submit' value='Remove')

		div.row.gutter-large(ng-controller="eventCtrl")
			div.col-md-6
				form(novalidate name='addevent' ng-submit='addevent.$valid && addOrEdit(_event)')
					div.form-group.row.gutter-base
						h2.form-title {{ editType }} event
						div.form-control.col-sm-6
							label.label Title
							div.form-element
								input.input(type='text' name='title' ng-model='_event.title' required)
						div.col-sm-6
							div.form-control
								label.label Company
								div.form-element
									input.input(type='text' name='company' ng-model='_event.company' ng-value="suggestedPassword")
						div.col-sm-6
							div.form-control
								label.label Date
								div.form-element
									input.input(pikaday="date" format="YYYY-MM-DD" ng-model='_event.date' required)
						div.col-sm-6
							div.form-control
								label.label Location
								div.form-element
									input.input(type='text' name='location' ng-model='_event.location')
						div.col-sm-12
							div.form-control
								label.label Instagram Post URL
								div.form-element
									input.input(type='text' name='instagram' ng-model='_event.instagram')
					div.form-group.row.gutter-base
						div.form-control
							input.btn.btn-primary(type='submit' value='{{ editType }}')
							a.btn.btn-secondary(ng-click='resetForm()') Cancel
			div.col-md-6
				form(novalidate name='removeevent' ng-submit='removeevent.$valid && remove(selectedEvent)')
					div.form-group.row.gutter-base
						h2.form-title Events
						div.form-control.col-12
							label.label Choose an event
							div.form-element
								select(name="selectEvent" id="selectEvent" ng-options="event.title for event in allEvents" ng-model="selectedEvent" ng-change="editEvent(selectedEvent)")
					div.form-group.row.gutter-base
						div.form-control
							input.btn.btn-primary(type='submit' value='Remove')