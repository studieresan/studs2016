include ../layout/header.jade
include ../layout/menu.jade

section.padding#profile-header
	.wrap
		.row.gutter-base.flex.flex-center
			.col-sm-2
			.col-4.image
				img(src="https://placeimg.com/250/250/any")
			.col-4
				h1 #{user.firstname} #{user.lastname}
				span.email #{user.email}
				a.btn.btn-primary.btn-small(href="#") Call to action
			.col-sm-2

section.padding
	.wrap
		.row.flex.flex-center
			.col-sm-6
				form(novalidate name='useredit' ng-submit='useredit.$valid && login(user)')
					div.form-group
						h1 Personal data
						div.form-group.row.gutter-base
							div.col-sm-6
								div.form-control
									label.label Firstname
									div.form-element
										input.input(type='text' name='firstname' ng-model='user.firstname' required)
							div.col-sm-6
								div.form-control
									label.label Lastname
									div.form-element
										input.input(type='text' name='lastname' ng-model='user.lastname' required)
							div.form-control
								label.label E-mail
								div.form-element
									input.input(type='email' name='email' ng-model='user.email' required)

						div.form-group.row.gutter-base
							div.col-sm-6
								div.form-control
									label.label Phon
									div.form-element
										input.input(type='text' name='firstname' ng-model='user.email' required)
							div.col-sm-6
								div.form-control
									label.label Lastname
									div.form-element
										input.input(type='text' name='lastname' ng-model='user.email' required)
						div.form-control
							input.btn.btn-primary(type='submit' value='Save')

include ../layout/footer.jade
include ../layout/includes.jade